{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"composite": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noErrorTruncation": true,
		"stripInternal": true,
		"lib": ["ESNext"],
		"jsx": "react",
		"customConditions": ["arktype-repo"]
		// Can be used in place of arktype-repo in Bun
		// "paths": {
		// 	"arktype": ["./ark/type/main.ts"],
		// 	"@arktype/util": ["./ark/util/main.ts"],
		// 	"@arktype/fs": ["./ark/fs/main.ts"],
		// 	"@arktype/schema": ["./ark/schema/main.ts"],
		// 	"@arktype/attest": ["./ark/attest/main.ts"]
		// },
		// "types": ["node", "mocha"]
	},
	"ts-node": {
		"esm": true,
		"swc": true,
		"transpileOnly": true
	},
	"exclude": ["./ark/docs"]
}
