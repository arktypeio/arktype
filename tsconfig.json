{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"stripInternal": true,
		// "noErrorTruncation": true,
		"paths": {
			"arktype": ["./ark/type/main.ts"],
			"@arktype/util": ["./ark/util/main.ts"],
			"@arktype/fs": ["./ark/fs/main.ts"],
			"@arktype/schema": ["./ark/schema/main.ts"],
			"@arktype/attest": ["./ark/attest/main.ts"],
			"@arktype/schema/config": ["./ark/schema/config.ts"]
		}
	},
	"exclude": ["**/out", "node_modules", "./ark/docs"]
}
