{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"composite": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noErrorTruncation": true,
		"stripInternal": true,
		"lib": ["ESNext"],
		"jsx": "react",
		"paths": {
			"arktype": ["./ark/type/main.ts"],
			"arktype/internal/*": ["./ark/type/*"],
			"@arktype/util": ["./ark/util/main.ts"],
			"@arktype/util/*": ["./ark/util/*"],
			"@arktype/fs": ["./ark/fs/main.ts"],
			"@arktype/fs/*": ["./ark/fs/*"],
			"@arktype/schema": ["./ark/schema/main.ts"],
			"@arktype/schema/*": ["./ark/schema/*"],
			"@arktype/attest": ["./ark/attest/main.ts"],
			"@arktype/attest/*": ["./ark/attest/*"]
		}
	},
	"exclude": ["./ark/docs"]
}
