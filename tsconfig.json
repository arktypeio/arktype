{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "jsx": "react",
        "lib": ["ESNext"],
        "paths": {
            "get-current-line": [
                "./node_modules/get-current-line/compiled-types/index.d.ts"
            ]
        }
    },
    "exclude": ["**/node_modules", "**/dist", "./dev/arktype.io"],
    "ts-node": {
        "esm": true,
        "swc": true,
        "transpileOnly": true
    }
}
