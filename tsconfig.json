{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"stripInternal": true
	},
	"exclude": ["**/out", "node_modules", "./ark/docs"]
}
