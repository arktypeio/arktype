{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "emitDeclarationOnly": true,
        "jsx": "react",
        "lib": ["ESNext"]
    },
    "exclude": ["**/node_modules", "**/dist"],
    "ts-node": {
        "esm": true,
        "swc": true,
        "transpileOnly": true,
        "experimentalResolverFeatures": false
    }
}
