{
	"extends": "./ark/util/tsconfig.base.json",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"customConditions": ["ark-ts"],
		"types": ["mocha", "node"],
		// avoid prototype methods that are not available and cannot easily be transpiled
		"lib": ["ES2020"]
		// "noErrorTruncation": true
		// disabling until compatible with tsgo
		// "erasableSyntaxOnly": true
	},
	"exclude": ["**/out", "**/node_modules", "./ark/docs", "**/*.scratch.ts"]
}
