{
    "name": "arktype",
    "description": "TypeScript's 1:1 validator, optimized from editor to runtime",
    "version": "1.0.14-alpha",
    "author": {
        "name": "David Blass",
        "email": "david@arktype.io",
        "url": "https://arktype.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype.git"
    },
    "type": "module",
    "main": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": "./dist/main.js",
        "./internal/*": "./dist/*"
    },
    "files": [
        "dist",
        "!*.tsbuildinfo"
    ],
    "packageManager": "pnpm@8.4.0",
    "scripts": {
        "prChecks": "pnpm install && pnpm lint && pnpm checkFormat && pnpm testRepo && pnpm buildRepo",
        "build": "tsx ./dev/scripts/build.ts",
        "buildRepo": "pnpm build && pnpm run -r build",
        "test": "pnpm vitest --config dev/configs/vitest.config.ts",
        "tnt": "pnpm test -- -- --skipTypes",
        "testRepo": "pnpm -r test && pnpm testTsVersions",
        "testTsVersions": "tsx ./dev/scripts/testTsVersions.ts",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --max-warnings=0 .",
        "format": "prettier --write --ignore-path ./dev/configs/.prettierignore .",
        "checkFormat": "prettier --check --ignore-path ./dev/configs/.prettierignore .",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install dev/configs/.husky",
        "changes": "cd ./dev/configs && node ../../node_modules/@changesets/cli/bin.js",
        "ci:publish": "pnpm changes publish",
        "ci:version": "tsx ./dev/scripts/updateVersions.ts"
    },
    "devDependencies": {
        "@changesets/changelog-github": "0.4.8",
        "@changesets/cli": "2.26.1",
        "@types/node": "18.16.3",
        "@typescript-eslint/eslint-plugin": "5.59.2",
        "@typescript-eslint/parser": "5.59.2",
        "c8": "7.13.0",
        "eslint": "8.39.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-define-config": "1.20.0",
        "eslint-import-resolver-typescript": "3.5.5",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-only-warn": "1.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "46.0.0",
        "husky": "8.0.3",
        "prettier": "2.8.8",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "tsx": "3.12.7",
        "typescript": "4.9.5",
        "vitest": "0.30.1"
    },
    "c8": {
        "checkCoverage": true,
        "lines": 96,
        "src": "./src",
        "exclude": [
            "test/**",
            "dev/**"
        ],
        "extension": ".ts",
        "reporter": "lcovonly"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "extends": "./dev/configs/.eslintrc.cjs"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search",
                "@babel/core",
                "typescript"
            ]
        }
    }
}
