{
    "name": "arktype",
    "description": "Isomorphic type syntax for TS/JS",
    "version": "0.0.1",
    "author": {
        "name": "David Blass",
        "email": "david@arktype.io",
        "url": "https://arktype.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype.git"
    },
    "type": "module",
    "main": "./dist/cjs/api.js",
    "types": "./dist/types/api.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/api.d.ts",
            "import": "./dist/mjs/api.js",
            "require": "./dist/cjs/api.js"
        }
    },
    "packageManager": "pnpm@7.13.5",
    "scripts": {
        "build": "pnpm build-scoped && pnpm build-arktype",
        "build-arktype": "ts-node ./meta/scripts/build.ts",
        "build-scoped": "pnpm -r --filter '!arktype.io' build",
        "build-docs": "pnpm --filter 'arktype.io' build",
        "pr-checks": "pnpm install && pnpm build && pnpm lint && pnpm test && pnpm docgen",
        "test": "c8 reassert --cmd mocha",
        "lint": "eslint --max-warnings=0 .",
        "docgen": "ts-node ./meta/scripts/docgen.ts && pnpm build-docs",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install meta/configs/.husky",
        "pre-commit": "pretty-quick --staged",
        "unused": "ts-node ./meta/scripts/runUnusedExports.ts",
        "ci:version": "ts-node ./meta/scripts/updateVersions.ts && pnpm build-docs",
        "ci:publish": "ts-node ./meta/scripts/publish.ts",
        "typecheck": "tsc --noEmit",
        "tnt": "reassert --skipTypes --cmd mocha",
        "testBuild": "ts-node ./meta/scripts/testBuild.ts",
        "bench": "reassert bench --benchmarksPath ./src/__tests__/benchmarks.json",
        "generateBenchData": "ts-node ./src/__tests__/generateBenchData.ts",
        "diag": "tsc --composite false --noEmit --diagnostics --incremental false"
    },
    "dependencies": {
        "@arktype/tools": "workspace:*"
    },
    "devDependencies": {
        "@arktype/check": "workspace:*",
        "@arktype/node": "workspace:*",
        "@changesets/cli": "2.25.0",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.3.9",
        "@types/node": "18.11.2",
        "@typescript-eslint/eslint-plugin": "5.40.1",
        "@typescript-eslint/parser": "5.40.1",
        "c8": "7.12.0",
        "eslint": "8.25.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-define-config": "1.7.0",
        "eslint-import-resolver-typescript": "3.5.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-only-warn": "1.0.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "44.0.2",
        "husky": "8.0.1",
        "prettier": "2.7.1",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "ts-morph": "16.0.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.1-beta",
        "mocha": "10.1.0",
        "@types/mocha": "10.0.0",
        "fast-check": "3.2.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "webpack",
                "@babel/core",
                "@algolia/client-search"
            ]
        }
    },
    "c8": {
        "checkCoverage": true,
        "lines": 98,
        "src": "src",
        "extension": ".ts",
        "reporter": "lcovonly"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none"
    },
    "mocha": {
        "spec": "**/*.test.ts",
        "ignore": "**/node_modules/*",
        "node-option": [
            "loader=ts-node/esm",
            "no-warnings=ExperimentalWarning"
        ]
    },
    "eslintConfig": {
        "extends": "./meta/configs/.eslintrc.cjs"
    }
}
