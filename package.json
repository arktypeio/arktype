{
    "name": "arktype",
    "description": "Isomorphic type syntax for TS/JS",
    "version": "0.1.0",
    "author": {
        "name": "David Blass",
        "email": "david@arktype.io",
        "url": "https://arktype.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype.git"
    },
    "type": "module",
    "main": "./dist/api.cjs",
    "types": "./dist/api.d.ts",
    "exports": {
        ".": {
            "types": "./dist/api.d.ts",
            "import": "./dist/api.mjs",
            "require": "./dist/api.cjs"
        }
    },
    "packageManager": "pnpm@7.18.0",
    "scripts": {
        "//temporarily disabled pr checks": "pnpm testRepo",
        "prChecks": "pnpm install && pnpm build && pnpm typecheck && pnpm lint && pnpm test && pnpm buildDocs",
        "typecheck": "tsc --noEmit",
        "build": "ts-node ./dev/scripts/build.ts",
        "buildDocs": "pnpm docgen && cd dev/arktype.io && pnpm install && pnpm build",
        "docgen": "ts-node ./dev/scripts/docgen.ts",
        "test": "ts-node ./dev/attest/cli.ts --cmd mocha",
        "testCov": "c8 pnpm test",
        "testBuild": "ts-node ./dev/scripts/testBuild.ts",
        "buildThenTest": "pnpm build --test && pnpm testBuild",
        "tnt": "ts-node ./dev/attest/cli.ts --skipTypes --cmd mocha",
        "testAttest": "cd ./dev/attest && pnpx ts-node cli.ts --cmd mocha",
        "testRepo": "pnpm testCov; pnpm testAttest; ts-node ./dev/scripts/testBuild.ts; deno task test",
        "testTsVersions": "ts-node ./dev/attest/src/testTsVersions.ts",
        "bench": "ts-node ./dev/attest/cli.ts bench --benchmarksPath ./test/benchmarks.json",
        "lint": "eslint --max-warnings=0 .",
        "format": "prettier --write --ignore-path ./dev/configs/.prettierignore .",
        "findUnused": "ts-node ./dev/scripts/findUnusedExports.ts",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install dev/configs/.husky",
        "ci:version": "ts-node ./dev/scripts/updateVersions.ts",
        "ci:publish": "changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "2.26.0",
        "@swc/cli": "0.1.59",
        "@swc/core": "1.3.24",
        "@types/mocha": "10.0.1",
        "@types/node": "18.11.18",
        "@typescript-eslint/eslint-plugin": "5.48.0",
        "@typescript-eslint/parser": "5.48.0",
        "c8": "7.12.0",
        "eslint": "8.31.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-define-config": "1.13.0",
        "eslint-import-resolver-typescript": "3.5.2",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-only-warn": "1.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "45.0.2",
        "fast-check": "3.5.0",
        "get-current-line": "6.6.0",
        "husky": "8.0.3",
        "mocha": "10.2.0",
        "prettier": "2.8.1",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "ts-morph": "17.0.1",
        "ts-node": "10.9.1",
        "typescript": "5.0.0-beta"
    },
    "c8": {
        "checkCoverage": true,
        "lines": 98,
        "src": "./src",
        "extension": ".ts",
        "reporter": "lcovonly"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none"
    },
    "mocha": {
        "spec": "test/*.test.ts",
        "ignore": "**/node_modules/*",
        "node-option": [
            "loader=ts-node/esm",
            "no-warnings=ExperimentalWarning"
        ]
    },
    "eslintConfig": {
        "extends": "./dev/configs/.eslintrc.cjs"
    }
}
