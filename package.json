{
    "name": "@re-/po",
    "private": true,
    "packageManager": "pnpm@7.1.2",
    "type": "module",
    "scripts": {
        "build": "pnpm --filter '@re-/*' build",
        "build-pages": "pnpm --filter 'redo.dev' build",
        "test": "pnpm -r test",
        "bench": "pnpm -r bench",
        "lint": "eslint .",
        "pr-checks": "pnpm install && pnpm build && pnpm lint && pnpm test && pnpm bench && pnpm build-pages",
        "docgen": "ts-node ./scripts/docgen.ts && pnpm build-pages",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install",
        "pre-commit": "pretty-quick --staged",
        "find-unused": "ts-node ./scripts/findUnused.ts",
        "ci:version": "ts-node ./scripts/updateVersions.ts && pnpm build-pages",
        "ci:publish": "pnpm changeset publish"
    },
    "devDependencies": {
        "@re-/node": "link:./@re-/node",
        "@changesets/cli": "2.23.0",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.204",
        "@types/mocha": "9.1.1",
        "@types/node": "18.0.0",
        "@typescript-eslint/eslint-plugin": "5.28.0",
        "@typescript-eslint/parser": "5.28.0",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.18.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-define-config": "1.5.1",
        "eslint-import-resolver-typescript": "2.7.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "42.0.0",
        "husky": "8.0.1",
        "mocha": "10.0.0",
        "prettier": "2.7.1",
        "pretty-quick": "3.1.3",
        "ts-morph": "15.1.0",
        "ts-node": "10.8.1",
        "typescript": "4.8.0-beta",
        "type-fest": "2.13.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "webpack",
                "@babel/core"
            ]
        }
    }
}
