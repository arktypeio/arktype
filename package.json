{
    "name": "arktype",
    "description": "Isomorphic type syntax for TS/JS",
    "version": "0.0.1",
    "author": {
        "name": "David Blass",
        "email": "david@arktype.io",
        "url": "https://arktype.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype.git"
    },
    "type": "module",
    "main": "./dist/cjs/api.js",
    "types": "./dist/types/api.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/api.d.ts",
            "import": "./dist/mjs/api.js",
            "require": "./dist/cjs/api.js"
        }
    },
    "imports": {
        "#testing": {
            "default": "./dev/testing/api.ts"
        },
        "#runtime": {
            "node": "./dev/node/api.ts"
        },
        "#arktype": {
            "default": "./src/api.ts"
        },
        "#arktype/utils": {
            "default": "./src/utils/exports.ts"
        }
    },
    "packageManager": "pnpm@7.14.0",
    "scripts": {
        "prChecks": "pnpm install && pnpm build && pnpm lint && pnpm test && pnpm docgen",
        "typecheck": "tsc --noEmit",
        "build": "ts-node ./dev/scripts/build.ts",
        "buildDocs": "ts-node ./dev/scripts/build.ts",
        "docgen": "ts-node ./dev/scripts/docgen.ts && pnpm buildDocs",
        "test": "c8 ts-node ./dev/testing/cli.ts --cmd mocha",
        "tnt": "c8 ts-node ./dev/testing/cli.ts --skipTypes --cmd mocha",
        "testBuild": "ts-node ./dev/scripts/testBuild.ts",
        "bench": "ts-node ./dev/testing/cli.ts bench --benchmarksPath ./src/__tests__/benchmarks.json",
        "lint": "eslint --max-warnings=0 .",
        "findUnused": "ts-node ./dev/scripts/runUnusedExports.ts",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install dev/configs/.husky",
        "ci:version": "ts-node ./dev/scripts/updateVersions.ts && pnpm buildDocs",
        "ci:publish": "ts-node ./dev/scripts/publish.ts"
    },
    "devDependencies": {
        "@changesets/cli": "2.25.0",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.3.9",
        "@types/node": "18.11.2",
        "@typescript-eslint/eslint-plugin": "5.40.1",
        "@typescript-eslint/parser": "5.40.1",
        "c8": "7.12.0",
        "eslint": "8.25.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-define-config": "1.7.0",
        "eslint-import-resolver-typescript": "3.5.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-only-warn": "1.0.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "44.0.2",
        "husky": "8.0.1",
        "prettier": "2.7.1",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "ts-morph": "16.0.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.1-beta",
        "mocha": "10.1.0",
        "@types/mocha": "10.0.0",
        "fast-check": "3.2.0",
        "get-current-line": "6.6.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "webpack",
                "@babel/core",
                "@algolia/client-search"
            ]
        }
    },
    "c8": {
        "checkCoverage": true,
        "lines": 98,
        "src": "src",
        "extension": ".ts",
        "reporter": "lcovonly"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none"
    },
    "mocha": {
        "spec": "**/*.test.ts",
        "ignore": "**/node_modules/*",
        "node-option": [
            "loader=ts-node/esm",
            "no-warnings=ExperimentalWarning"
        ]
    },
    "eslintConfig": {
        "extends": "./dev/configs/.eslintrc.cjs"
    }
}
