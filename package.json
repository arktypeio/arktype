{
	"name": "arktypeio",
	"description": "TypeScript's 1:1 validator, optimized from editor to runtime",
	"license": "MIT",
	"funding": "https://github.com/arktypeio/arktype?sponsor=1",
	"author": {
		"name": "David Blass",
		"email": "david@arktype.io",
		"url": "https://arktype.io"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arktypeio/arktype.git"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"prChecks": "pnpm install && pnpm lint && pnpm checkFormat && pnpm testRepo && pnpm buildRepo",
		"build": "pnpm -r build",
		"buildCjs": "ARKTYPE_CJS=1 pnpm -r build",
		"docgen": "tsx ./ark/repo/docgen.ts",
		"test": "mocha",
		"tnt": "mocha --skipTypes",
		"bench": "tsx ./ark/schema/__tests__/comparison.bench.ts",
		"testRepo": "pnpm test && cd ./ark/test && pnpm test && pnpm testTsVersions",
		"testTsVersions": "tsx ./ark/repo/testTsVersions.ts",
		"typecheck": "tsc --noEmit",
		"tsin": "tsc --noEmit --extendedDiagnostics --composite false --declarationMap false",
		"tsperf": "pnpm tstrace && analyze-trace .tstrace",
		"tstrace": "tsc --noEmit --extendedDiagnostics --composite false --declarationMap false --generateTrace .tstrace",
		"lint": "eslint --max-warnings=0 .",
		"format": "prettier --write --ignore-path ./ark/repo/.prettierignore .",
		"checkFormat": "prettier --check --ignore-path ./ark/repo/.prettierignore .",
		"knip": "knip",
		"ci:publish": "pnpm changeset publish",
		"ci:version": "tsx ./ark/repo/updateVersions.ts"
	},
	"devDependencies": {
		"arktype": "workspace:*",
		"@arktype/attest": "workspace:*",
		"@arktype/repo": "workspace:*",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.1",
		"@types/mocha": "10.0.6",
		"@types/node": "20.10.2",
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"@typescript-eslint/parser": "6.13.1",
		"@typescript/analyze-trace": "0.10.1",
		"c8": "8.0.1",
		"eslint": "8.55.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-define-config": "1.24.1",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-mdx": "2.2.0",
		"eslint-plugin-only-warn": "1.1.0",
		"eslint-plugin-prefer-arrow-functions": "3.2.4",
		"knip": "3.3.5",
		"mocha": "10.2.0",
		"prettier": "3.1.0",
		"prettier-plugin-jsdoc": "1.1.1",
		"tsx": "4.6.1",
		"typescript": "5.3.3",
		"attest-ts50": "npm:typescript@5.0",
		"attest-ts51": "npm:typescript@5.1",
		"attest-ts52": "npm:typescript@5.2",
		"attest-ts53": "npm:typescript@5.3",
		"attest-ts54": "npm:typescript@next"
	},
	"mocha": {
		"//": "IF YOU UPDATE THE MOCHA CONFIG HERE, PLEASE ALSO UPDATE ark/repo/mocha.jsonc AND .vscode/settings.json",
		"spec": [
			"**/__tests__/*.test.*"
		],
		"ignore": "**/node_modules/**/*",
		"node-option": [
			"import=tsx"
		],
		"require": "./ark/repo/mocha.fixtures.ts"
	},
	"c8": {
		"checkCoverage": true,
		"lines": 96,
		"src": "./src",
		"exclude": [
			"__tests__/**"
		],
		"extension": ".ts",
		"reporter": "lcovonly"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"trailingComma": "none"
	},
	"eslintConfig": {
		"extends": "./ark/repo/.eslintrc.cjs"
	}
}
