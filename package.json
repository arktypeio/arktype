{
    "name": "@re-/po",
    "private": true,
    "packageManager": "pnpm@7.11.0",
    "type": "module",
    "scripts": {
        "build": "pnpm --filter '@re-/*' build",
        "pr-checks": "pnpm install && pnpm build && pnpm lint && pnpm test && pnpm docgen",
        "test": "pnpm -r test && pnpm -r testBuild && pnpm test-repo-scripts",
        "lint": "eslint --max-warnings=0 .",
        "build-pages": "pnpm --filter 'arktype.io' build",
        "docgen": "ts-node ./scripts/docgen.ts && pnpm build-pages",
        "test-repo-scripts": "ts-node ./scripts/testScripts.ts",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install",
        "pre-commit": "pretty-quick --staged",
        "unused": "ts-node ./scripts/runUnusedExports.ts",
        "ci:version": "ts-node ./scripts/updateVersions.ts && pnpm build-pages",
        "ci:publish": "ts-node ./scripts/publish.ts"
    },
    "devDependencies": {
        "@re-/assert": "link:./@re-/assert",
        "@re-/node": "link:./@re-/node",
        "@changesets/cli": "2.24.4",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.247",
        "@types/node": "18.7.15",
        "@typescript-eslint/eslint-plugin": "5.36.2",
        "@typescript-eslint/parser": "5.36.2",
        "c8": "7.12.0",
        "commitizen": "4.2.5",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.23.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-define-config": "1.7.0",
        "eslint-import-resolver-typescript": "3.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-only-warn": "1.0.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "43.0.2",
        "husky": "8.0.1",
        "prettier": "2.7.1",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "ts-morph": "16.0.0",
        "ts-node": "10.9.1",
        "type-fest": "2.19.0",
        "typescript": "4.8.2",
        "mocha": "10.0.0",
        "@types/mocha": "9.1.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "webpack",
                "@babel/core",
                "@algolia/client-search"
            ]
        }
    }
}
