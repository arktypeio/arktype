{
	"name": "arktypeio",
	"description": "TypeScript's 1:1 validator, optimized from editor to runtime",
	"license": "MIT",
	"funding": "https://github.com/arktypeio/arktype?sponsor=1",
	"author": {
		"name": "David Blass",
		"email": "david@arktype.io",
		"url": "https://arktype.io"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arktypeio/arktype.git"
	},
	"type": "module",
	"private": true,
	"scripts": {
		"prChecks": "pnpm install && pnpm lint && pnpm testRepo && pnpm buildRepo",
		"build": "pnpm -r build",
		"buildCjs": "ARKTYPE_CJS=1 pnpm -r build",
		"docgen": "tsx ./ark/repo/docgen.ts",
		"test": "mocha",
		"tnt": "mocha --skipTypes",
		"testRepo": "pnpm test && cd ./ark/test && pnpm test && pnpm testTsVersions",
		"testTsVersions": "tsx ./ark/repo/testTsVersions.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"format": "biome format --write .",
		"knip": "knip",
		"ci:publish": "pnpm changeset publish",
		"ci:version": "tsx ./ark/repo/updateVersions.ts"
	},
	"devDependencies": {
		"arktype": "workspace:*",
		"@arktype/attest": "workspace:*",
		"@arktype/repo": "workspace:*",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.1",
		"@types/mocha": "10.0.6",
		"@types/node": "20.12.5",
		"@biomejs/biome": "1.6.4",
		"c8": "9.1.0",
		"knip": "5.7.2",
		"mocha": "10.4.0",
		"tsx": "4.7.2",
		"typescript": "5.4.2",
		"typescript-52": "npm:typescript@5.2",
		"typescript-53": "npm:typescript@5.3",
		"typescript-55": "npm:typescript@next"
	},
	"mocha": {
		"//": "IF YOU UPDATE THE MOCHA CONFIG HERE, PLEASE ALSO UPDATE ark/repo/mocha.jsonc AND .vscode/settings.json",
		"spec": ["**/__tests__/**/*.test.*"],
		"ignore": "**/node_modules/**/*",
		"node-option": ["import=tsx"],
		"require": "./ark/repo/mocha.fixtures.ts"
	},
	"c8": {
		"checkCoverage": true,
		"lines": 96,
		"src": "./src",
		"exclude": ["__tests__/**"],
		"extension": ".ts",
		"reporter": "lcovonly"
	}
}
