{
    "name": "arktype",
    "description": "Isomorphic type syntax for TS/JS",
    "version": "0.0.1",
    "author": {
        "name": "David Blass",
        "email": "david@arktype.io",
        "url": "https://arktype.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype.git"
    },
    "type": "module",
    "main": "./dist/cjs/api.js",
    "types": "./dist/types/api.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/api.d.ts",
            "import": "./dist/mjs/api.js",
            "require": "./dist/cjs/api.js"
        },
        "./internal": {
            "types": "./dist/types/internal.d.ts",
            "import": "./dist/mjs/internal.js",
            "require": "./dist/cjs/internal.js"
        }
    },
    "packageManager": "pnpm@7.14.0",
    "scripts": {
        "prChecks": "pnpm install && pnpm buildRepo && pnpm lint && pnpm testRepo",
        "typecheck": "tsc --noEmit",
        "typecheckRepo": "pnpm typecheck && pnpm -r typecheck",
        "build": "ts-node ./dev/scripts/build.ts",
        "buildDev": "pnpm build && pnpm -r --filter=!arktype.io build",
        "buildDocs": "pnpm docgen && pnpm -r --filter=arktype.io build",
        "buildRepo": "pnpm build && pnpm buildDev && pnpm buildDocs",
        "docgen": "ts-node ./dev/scripts/docgen.ts",
        "test": "c8 attest --cmd mocha",
        "tnt": "c8 attest --skipTypes --cmd mocha",
        "testRepo": "ts-node ./dev/scripts/testRepo.ts",
        "bench": "attest bench --benchmarksPath ./src/__tests__/benchmarks.json",
        "lint": "eslint --max-warnings=0 .",
        "findUnused": "ts-node ./dev/scripts/runUnusedExports.ts",
        "changeset": "changeset",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install dev/configs/.husky",
        "ci:version": "ts-node ./dev/scripts/updateVersions.ts",
        "ci:publish": "changeset publish"
    },
    "devDependencies": {
        "@arktype/runtime": "workspace:*",
        "@arktype/test": "link:./dev/test",
        "@changesets/cli": "2.25.0",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.3.9",
        "@types/node": "18.11.4",
        "@typescript-eslint/eslint-plugin": "5.40.1",
        "@typescript-eslint/parser": "5.40.1",
        "c8": "7.12.0",
        "eslint": "8.26.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-define-config": "1.7.0",
        "eslint-import-resolver-typescript": "3.5.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-only-warn": "1.0.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-unicorn": "44.0.2",
        "fast-check": "3.2.0",
        "husky": "8.0.1",
        "prettier": "2.7.1",
        "prettier-plugin-jsdoc": "0.4.2",
        "pretty-quick": "3.1.3",
        "ts-morph": "16.0.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.2-rc",
        "mocha": "10.1.0",
        "@types/mocha": "10.0.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "//": "Docusaurus/webpack nonsense",
            "ignoreMissing": [
                "@algolia/client-search",
                "@babel/core",
                "typescript"
            ]
        }
    },
    "c8": {
        "checkCoverage": true,
        "lines": 98,
        "src": "src",
        "extension": ".ts",
        "reporter": "lcovonly"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "trailingComma": "none"
    },
    "mocha": {
        "spec": "src/**/*.test.ts",
        "ignore": "**/node_modules/*",
        "node-option": [
            "loader=ts-node/esm",
            "no-warnings=ExperimentalWarning"
        ]
    },
    "eslintConfig": {
        "extends": "./dev/configs/.eslintrc.cjs"
    }
}
