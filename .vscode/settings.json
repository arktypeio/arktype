{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.fixAll.eslint"],
    "eslint.codeActionsOnSave.rules": [
        "import/order",
        "sort-imports",
        "import/no-duplicates",
        "unicorn/prefer-node-protocol",
        "@typescript-eslint/consistent-type-imports",
        "object-shorthand"
    ],
    "cSpell.enabled": true,
    "cSpell.useGitignore": true,
    "cSpell.userWords": [
        "arktype",
        "Blass",
        "Cascadia",
        "Caskaydia",
        "Consolas",
        "defaultsauto",
        "Deno",
        "docgen",
        "esbenp",
        "glassit",
        "gzipped",
        "lcovonly",
        "Literalable",
        "optionalize",
        "preinstall",
        "quokka",
        "sharktypeio",
        "stringification",
        "typecheck",
        "typeof",
        "unvalidated",
        "stackblitz",
        "toggleable",
        "chatgpt"
    ],
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    // temporarily disabled until .ts suffixes are preserved
    "typescript.updateImportsOnFileMove.enabled": "never",
    "prettier.ignorePath": "dev/configs/.prettierignore",
    "mochaExplorer.nodeArgv": [
        "--loader=ts-node/esm",
        "--no-warnings=ExperimentalWarning"
    ],
    "mochaExplorer.env": {
        "ARKTYPE_CHECK_CMD": "--skipTypes"
    },
    "testExplorer.useNativeTesting": true,
    "deno.config": "./dev/configs/deno.jsonc",
    "deno.lint": false,
    "cSpell.words": [
        "gtag",
        "Infima",
        "intellij",
        "interactable",
        "Intersector",
        "pnpm",
        "uninteractable",
        "unscanned",
        "uninteractable"
    ]
    // Should remain commented when code is submitted for PR so Node is active by default
    // "deno.enable": true
}
