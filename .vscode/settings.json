{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true
    },
    "search.exclude": {
        "common/temp": true,
        ".git": true,
        "**/out/*": true,
        "**/dist/*": true,
        "**/node_modules/*": true,
        "test/**/__snapshots__": true,
        "pnpm-lock.*": true,
        "*.lock": true,
        "**/coverage/*": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "deno.enablePaths": ["./pkgs/tools"],
    "deno.config": "./pkgs/deno.json"
}
