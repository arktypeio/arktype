{
	"name": "arkdark",
	"displayName": "ArkDark",
	"description": "Syntax highlighting, inline errors and theme for ArkTypeâ›µ",
	"version": "5.13.0",
	"publisher": "arktypeio",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"publishExtension": "pnpm packageExtension && pnpm publishVsce && pnpm publishOvsx",
		"packageExtension": "vsce package --out arkdark.vsix",
		"publishVsce": "vsce publish -i arkdark.vsix",
		"publishOvsx": "ovsx publish -i arkdark.vsix"
	},
	"devDependencies": {
		"vsce": "2.15.0",
		"ovsx": "0.10.1"
	},
	"files": [
		"*.json"
	],
	"exports": {
		"./*.json": "./*.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arktypeio/arktype"
	},
	"engines": {
		"vscode": "^1.0.0"
	},
	"icon": "icon.png",
	"categories": [
		"Themes",
		"Programming Languages"
	],
	"extensionDependencies": [
		"usernamehw.errorlens"
	],
	"contributes": {
		"themes": [
			{
				"label": "ArkDark",
				"uiTheme": "vs-dark",
				"path": "./arkdark.json"
			},
			{
				"label": "ArkDark Italic",
				"uiTheme": "vs-dark",
				"path": "./arkdarkItalic.json"
			}
		],
		"grammars": [
			{
				"injectTo": [
					"source.ts",
					"source.tsx",
					"source.js",
					"source.jsx",
					"source.mdx",
					"text.html.markdown"
				],
				"scopeName": "source.arktype.injection.ts",
				"path": "injected.tmLanguage.json"
			}
		],
		"configurationDefaults": {
			"editor.quickSuggestions": {
				"strings": "on"
			},
			"errorLens.followCursor": "closestProblem",
			"errorLens.delay": 0,
			"errorLens.editorHoverPartsEnabled": {
				"buttonsEnabled": false
			},
			"errorLens.replace": [
				{
					"matcher": ".*'ErrorType<(.*)>'.*$",
					"message": "$1"
				},
				{
					"matcher": ".*'\"(.*\\u200A)\"'\\.$",
					"message": "$1"
				},
				{
					"matcher": "^(?:Type|Argument of type) '\"(.*)\"' is not assignable to (?:parameter of )?type '(\"\\1.*\")'\\.$",
					"message": "$2"
				},
				{
					"matcher": "[^]*\n([^\n]*)$",
					"message": "$1"
				}
			]
		}
	}
}
