{
    "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
    "rushVersion": "5.56.0",
    "pnpmVersion": "6.23.6",
    "pnpmOptions": {
        "useWorkspaces": true
    },
    "nodeSupportedVersionRange": ">=16.0.0",
    "suppressNodeLtsWarning": true,
    "ensureConsistentVersions": true,
    "repository": {
        "url": "https://github.com/re-do/re-po",
        "defaultBranch": "main"
    },
    "projects": [
        {
            "packageName": "@re-/node",
            "projectFolder": "pkgs/node",
            "cyclicDependencyProjects": ["@re-/tools"],
            "shouldPublish": true
        },
        {
            "packageName": "@re-/tools",
            "projectFolder": "pkgs/tools",
            "shouldPublish": true
        },
        {
            "packageName": "@re-/assert",
            "projectFolder": "pkgs/assert",
            "cyclicDependencyProjects": ["@re-/node", "@re-/tools"],
            "shouldPublish": true
        },
        {
            "packageName": "@re-/model",
            "projectFolder": "pkgs/model",
            "shouldPublish": true
        },
        {
            "packageName": "@re-/state",
            "projectFolder": "pkgs/state",
            "shouldPublish": true
        },
        {
            "packageName": "@re-/docs",
            "projectFolder": "pkgs/docs",
            "shouldPublish": false
        }
    ]
}
