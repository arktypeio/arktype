{
    "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
    "rushVersion": "5.50.0",
    "pnpmVersion": "6.11.0",
    "pnpmOptions": {
        "useWorkspaces": true
    },
    "nodeSupportedVersionRange": ">=16.0.0",
    "suppressNodeLtsWarning": true,
    "ensureConsistentVersions": true,
    "repository": {
        "url": "https://github.com/re-do/redo"
    },
    "projects": [
        {
            "packageName": "@re-do/utils",
            "projectFolder": "pkgs/utils",
            "shouldPublish": true
        },
        {
            "packageName": "statelessly",
            "projectFolder": "pkgs/statelessly",
            "shouldPublish": true
        },
        {
            "packageName": "react-statelessly",
            "projectFolder": "pkgs/react-statelessly",
            "shouldPublish": true
        },
        {
            "packageName": "persist-statelessly",
            "projectFolder": "pkgs/persist-statelessly",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/model",
            "projectFolder": "pkgs/model",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/components",
            "projectFolder": "pkgs/components",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/run",
            "projectFolder": "pkgs/run",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/node",
            "projectFolder": "pkgs/node",
            "shouldPublish": true,
            "cyclicDependencyProjects": ["@re-do/utils"]
        },
        {
            "packageName": "@re-do/data",
            "projectFolder": "pkgs/data",
            "shouldPublish": true
        },
        {
            "packageName": "jsrx",
            "projectFolder": "pkgs/jsrx",
            "shouldPublish": true
        },
        {
            "packageName": "restates",
            "projectFolder": "pkgs/restates"
        },
        {
            "packageName": "retypes",
            "projectFolder": "pkgs/retypes",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/test",
            "projectFolder": "pkgs/test",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/website",
            "projectFolder": "pkgs/website"
        },
        {
            "packageName": "@re-do/docs",
            "projectFolder": "pkgs/docs"
        },
        {
            "packageName": "@re-do/app",
            "projectFolder": "pkgs/app"
        }
    ]
}
