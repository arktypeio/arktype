{
    "name": "@re-/model",
    "version": "1.11.0",
    "author": "redo.dev",
    "description": "One definition from editor to runtimeðŸ§¬",
    "repository": {
        "type": "git",
        "url": "https://github.com/re-do/re-po.git",
        "directory": "pkgs/model"
    },
    "type": "module",
    "main": "out/cjs/index.cjs",
    "types": "out/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./out/types/index.d.ts",
            "import": "./out/esm/index.js",
            "require": "./out/cjs/index.cjs"
        }
    },
    "assertTsConfig": "tests/tsconfig.json",
    "//": "2>&1 redirects stderr to stdout to avoid rush test failing CI since Jest always outputs to stderr",
    "scripts": {
        "build": "reTsc",
        "tsc": "tsc -b",
        "test": "jest 2>&1",
        "unit": "jest --coverage false -t ",
        "generateSpace": "runScript src/__tests__/generateSpace.ts",
        "findUnused": "runScript findUnused.cjs",
        "typeDiag": "tsc --build --force --extendedDiagnostics > typeDiagNext.txt",
        "typeDiagSrc": "tsc --extendedDiagnostics --force --noEmit -p src/tsconfig.json > typeDiagSrc.txt",
        "typeTrace": "tsc --generateTrace typeTrace",
        "typeHotspots": "npx analyze-trace typeTrace > typeTrace/hotspots.txt",
        "typeSimplify": "npx simplify-trace-types typeTrace/types.json typeTrace/simpleTypes.json"
    },
    "dependencies": {
        "@re-/tools": "workspace:*"
    },
    "devDependencies": {
        "@re-/assert": "workspace:*",
        "@re-/node": "workspace:*",
        "jest": "27.4.5",
        "@types/jest": "27.0.3",
        "ts-jest": "27.1.2",
        "@types/node": "17.0.1",
        "typescript": "4.6.3",
        "@typescript/analyze-trace": "0.9.0",
        "ts-node": "10.4.0",
        "eslint": "8.15.0",
        "@typescript-eslint/parser": "5.22.0",
        "@typescript-eslint/eslint-plugin": "5.22.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "ts-morph": "14.0.0"
    }
}
