{
    "name": "@re-/node",
    "version": "2.0.0",
    "author": "redo.dev",
    "description": "Node-based utilities, scripts, and configs for Redo packages ⚙️",
    "repository": {
        "type": "git",
        "url": "https://github.com/re-do/re-po.git",
        "directory": "pkgs/node"
    },
    "type": "module",
    "main": "out/cjs/index.cjs",
    "types": "out/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./out/types/index.d.ts",
            "import": "./out/esm/index.js",
            "require": "./out/cjs/index.cjs"
        }
    },
    "scripts": {
        "build": "node --no-warnings --loader ts-node/esm ./src/reTscCli.ts",
        "test": "jest 2>&1",
        "lint": "eslint .",
        "runScript": "./runScript.js",
        "reTsc": "./reTsc.js",
        "reTranspile": "./reTranspile.js",
        "reDoc": "./reDoc.js"
    },
    "bin": {
        "runScript": "./runScript.js",
        "reTsc": "./reTsc.js",
        "reTranspile": "./reTranspile.js",
        "reDoc": "./reDoc.js"
    },
    "dependencies": {
        "execa": "5.0.0",
        "prompts": "2.4.1",
        "ts-node": "10.7.0",
        "tree-kill": "1.2.2",
        "get-current-line": "6.6.0",
        "@re-/tools": "2.0.0",
        "typescript": "4.6.3",
        "deepmerge": "4.2.2",
        "@microsoft/tsdoc": "0.14.1",
        "@microsoft/tsdoc-config": "0.16.1",
        "@microsoft/api-extractor": "7.22.2",
        "@microsoft/api-extractor-model": "7.17.2",
        "@microsoft/api-documenter": "7.17.10",
        "prettier": "2.6.2"
    },
    "devDependencies": {
        "@re-/assert": "workspace:*",
        "@types/prettier": "2.6.0",
        "@types/node": "17.0.35",
        "jest": "28.1.0",
        "@types/jest": "27.0.3",
        "ts-jest": "27.1.2",
        "@types/prompts": "2.0.11",
        "@jest/types": "27.4.2",
        "vite": "2.4.4",
        "eslint": "8.15.0",
        "@typescript-eslint/parser": "5.22.0",
        "@typescript-eslint/eslint-plugin": "5.22.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prefer-arrow": "1.2.3"
    }
}
