{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "jsx": "react",
        "lib": ["ESNext"],
        "typeRoots": ["./deno"],
        "paths": {
            "@deno/std/*.ts": ["./deno/std/*"],
            "@re-/assert": ["./src/index.ts"]
        }
    },
    "include": ["src", "tests"]
}
