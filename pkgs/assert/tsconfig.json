{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "jsx": "react",
        "lib": ["ESNext"],
        "typeRoots": ["./deno"],
        "paths": {
            "@src/*.ts": ["./src/*.js"],
            "@deno/std/*.ts": ["./deno/std/*.js"]
        }
    },
    "include": ["src", "tests", "*"]
}
