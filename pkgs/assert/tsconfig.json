{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "lib": ["ESNext"],
        "paths": {
            "src/*.ts": ["./src/*.js"],
            "deno/std/*.ts": ["./deno/std/*.js"]
        }
    },
    "include": ["src", "tests", "deno"]
}
