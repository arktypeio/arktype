{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "jsx": "react",
        "lib": ["ESNext"],
        "paths": {
            "@re-/assert": ["./src/index.js"]
        }
    },
    "include": ["src", "tests", "runTests.ts"]
}
