{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "types": ["vite/client", "node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["ESNext", "dom", "dom.iterable"],
        "jsx": "react"
    }
}
