{
    "name": "@re-do/app",
    "description": "The Redo app",
    "author": "Redo",
    "version": "0.0.1",
    "main": "dist/main.js",
    "scripts": {
        "build": "NODE_ENV=production npm run clean && webpack",
        "start": "NODE_ENV=development npm run clean && npm run devBuild && npm run devServer",
        "devBuild": "NODE_ENV=development webpack",
        "devServer": "NODE_ENV=development webpack-dev-server --config webpack.devServer.config.ts --progress --colors",
        "electron": "electron --remote-debugging-port=9223 ./dist/main.js",
        "clean": "rm -rf dist && mkdir dist",
        "dist": "npm run build && electron-builder -mwl"
    },
    "build": {
        "appId": "com.redo.app",
        "files": [
            "./dist/**/*",
            "./dist/injected.js",
            "!./dist/mac",
            "!./dist/linux-unpacked",
            "!./dist/win-unpacked"
        ],
        "linux": {
            "target": "zip"
        },
        "mac": {
            "target": "zip",
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": "zip"
        }
    },
    "dependencies": {
        "@apollo/client": "3.0.0-beta.16",
        "@babel/runtime-corejs3": "7.6.3",
        "@hot-loader/react-dom": "16.10.2",
        "@material-ui/core": "4.5.1",
        "@material-ui/styles": "4.5.0",
        "@medv/finder": "1.1.2",
        "@re-do/model": "0.0.1",
        "@re-do/test": "0.0.1",
        "@re-do/utils": "0.0.1",
        "core-js": "3.3.2",
        "dotenv": "8.2.0",
        "framer-motion": "1.6.14",
        "fs-extra": "8.1.0",
        "graphql": "14.5.8",
        "graphql-tag": "2.10.1",
        "puppeteer": "1.20.0",
        "react": "16.10.2",
        "react-dom": "16.10.2",
        "react-statelessly": "0.0.1",
        "tsconfig-paths": "3.9.0",
        "typeface-ubuntu": "0.0.65"
    },
    "devDependencies": {
        "@babel/core": "7.6.4",
        "@re-do/bundle": "0.0.1",
        "@re-do/components": "0.0.1",
        "@re-do/recommended": "0.0.1",
        "@types/dotenv": "6.1.1",
        "@types/electron-devtools-installer": "2.2.0",
        "@types/fs-extra": "8.0.1",
        "@types/node": "12.11.1",
        "@types/puppeteer": "1.20.2",
        "@types/react": "16.9.9",
        "@types/react-dom": "16.9.2",
        "babel-preset-redo": "0.0.1",
        "electron": "6.0.12",
        "electron-builder": "21.2.0",
        "react-hot-loader": "4.12.15",
        "ts-node": "8.5.4",
        "tsconfig-paths-webpack-plugin": "3.2.0",
        "typescript": "3.7.4",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.9",
        "webpack-dev-server": "3.8.2"
    }
}
