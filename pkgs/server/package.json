{
    "name": "@re-do/server",
    "version": "0.0.1",
    "author": "redo.qa",
    "description": "Redo's server",
    "scripts": {
        "build": "npm run generate && tsc",
        "start": "ts-node-dev --no-notify --respawn --transpileOnly src/index",
        "wipeDb": "rm -rf prisma/dev.db prisma/migrations",
        "seed": "ts-node prisma/seed.ts",
        "prisma": "prisma2 generate && npm run generateSchema && prisma2 lift save --name init && prisma2 lift up",
        "generate": "npm run wipeDb && npm run prisma && npm run seed",
        "clean": "rm -rf dist",
        "generateSchema": "ts-node --transpile-only src/schema"
    },
    "dependencies": {
        "@re-do/model": "0.0.1",
        "@re-do/utils": "0.0.1",
        "apollo-server": "2.7.0",
        "bcrypt": "3.0.6",
        "class-transformer": "0.2.0",
        "class-validator": "0.10.0",
        "deepmerge": "3.2.1",
        "dotenv": "7.0.0",
        "graphql": "14.4.2",
        "graphql-tag": "2.10.1",
        "isomorphic-ws": "4.0.1",
        "jsonwebtoken": "8.5.0",
        "reflect-metadata": "0.1.13",
        "type-graphql": "0.17.5",
        "nexus": "0.12.0-beta.8",
        "nexus-prisma": "0.4.2"
    },
    "devDependencies": {
        "@re-do/recommended": "0.0.1",
        "@types/bcrypt": "3.0.0",
        "@types/dotenv": "6.1.0",
        "@types/fs-extra": "8.0.0",
        "@types/graphql": "14.2.2",
        "@types/jest": "24.0.13",
        "@types/jsonwebtoken": "8.3.2",
        "@types/node": "12.6.6",
        "fs-extra": "8.1.0",
        "jest": "24.8.0",
        "prisma2": "2.0.0-preview-13.2",
        "ts-jest": "24.0.2",
        "ts-node": "8.3.0",
        "ts-node-dev": "1.0.0-pre.40",
        "typescript": "3.6.2"
    }
}
