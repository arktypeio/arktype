{
    "name": "@re-do/server",
    "version": "0.0.1",
    "author": "redo.qa",
    "description": "Redo's server",
    "scripts": {
        "build": "npm run generate && tsc",
        "start": "ts-node-dev --no-notify --respawn --transpileOnly src/index",
        "createDb": "npm run wipeDb && npm run liftDb && npm run seedDb",
        "wipeDb": "rm -rf prisma/dev.db prisma/migrations",
        "liftDb": "prisma2 lift save --name init && prisma2 lift up",
        "seedDb": "ts-node prisma/seed.ts",
        "generate": "prisma2 generate && npm run generateSchema",
        "generateSchema": "ts-node --transpile-only src/schema && cp schema.gql ../model"
    },
    "dependencies": {
        "@re-do/model": "0.0.1",
        "@re-do/utils": "0.0.1",
        "apollo-server": "2.9.6",
        "bcrypt": "3.0.6",
        "deepmerge": "4.1.1",
        "dotenv": "8.2.0",
        "graphql": "14.5.8",
        "graphql-tag": "2.10.1",
        "isomorphic-ws": "4.0.1",
        "jsonwebtoken": "8.5.1",
        "nexus": "0.12.0-rc.5",
        "redo-nexus-prisma": "0.6.1-8"
    },
    "devDependencies": {
        "@prisma/photon": "2.0.0-preview017.2",
        "@re-do/recommended": "0.0.1",
        "@types/bcrypt": "3.0.0",
        "@types/dotenv": "6.1.1",
        "@types/fs-extra": "8.0.1",
        "@types/graphql": "14.5.0",
        "@types/jest": "24.0.19",
        "@types/jsonwebtoken": "8.3.5",
        "@types/node": "12.11.1",
        "fs-extra": "8.1.0",
        "jest": "24.9.0",
        "prisma2": "2.0.0-preview017.2",
        "ts-node": "8.5.4",
        "ts-node-dev": "1.0.0-pre.43",
        "typescript": "3.7.4"
    }
}
