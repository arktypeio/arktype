datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model Tag {
  id   Int    @id
  name String
  user User
  @@unique([name, user])
}

model Selector {
  id  Int    @id
  css String
}

model Step {
  id       Int      @id
  action   String
  selector Selector
  value    String
}

model Test {
  id    Int    @id
  user  User
  name  String
  steps Step[]
  tags  Tag[]
  @@unique([name, user])
}

model User {
  id        Int        @id
  email     String     @unique
  password  String
  firstName String
  lastName  String
  selectors Selector[]
  steps     Step[]
  tests     Test[]
  tags      Tag[]
}