{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "inlineSourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "noErrorTruncation": true,
        "skipLibCheck": true
    }
}
