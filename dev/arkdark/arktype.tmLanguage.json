{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.arktype.injection.ts",
    "injectionSelector": "L:source.ts - comment",
    "patterns": [
        {
            "include": "#definition"
        }
    ],
    "repository": {
        "definition": {
            "name": "meta.embedded.arktype.definition",
            "begin": "(([^\\)\\(\\s]*\\.)?(type|scope)\\()",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function.ts"
                }
            },
            "end": "(?<=([^\"'`]*([\"'`])[^\"'`]*\\2)*[^\"'`]*)\\)",
            "patterns": [
                {
                    "include": "#quoted"
                },
                {
                    "include": "#object"
                },
                {
                    "include": "source.ts"
                }
            ]
        },
        "quoted": {
            "patterns": [
                {
                    "include": "#singleLineQuote"
                }
            ]
        },
        "singleLineQuote": {
            "name": "quoted",
            "match": "((?<!<)[\"'`])(.*?)?((?<!\\\\)(\\1))",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#operator"
                        },
                        {
                            "include": "#object"
                        },
                        {
                            "include": "#regex"
                        },
                        {
                            "include": "source.ts#type"
                        }
                    ]
                },
                "3": {
                    "name": "keyword.operator"
                }
            }
        },
        "regex": {
            "match": "(\\/)(.*)((?<!\\\\)(\\1))",
            "captures": {
                "1": { "name": "keyword.operator" },
                "2": {
                    "patterns": [
                        {
                            "name": "entity.name.type.ts",
                            "match": "[A-Za-z]"
                        },
                        {
                            "name": "constant.numeric.decimal.ts",
                            "match": "[0-9]"
                        },
                        { "include": "#operator" },
                        { "include": "#quoted" }
                    ]
                },
                "3": { "name": "keyword.operator" }
            }
        },
        "operator": {
            "name": "keyword.operator",
            "match": "[<>=%]|\""
        },
        "object": {
            "begin": "{",
            "end": "}",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.block.ts"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.block.ts"
                }
            },
            "patterns": [
                {
                    "include": "#quoted"
                },
                {
                    "include": "source.ts#comment"
                },
                {
                    "include": "#operator"
                },
                {
                    "include": "#object"
                },
                {
                    "match": "(([\"'`])?(\\w+)(\\2)?\\: ?)((([\"'`]?)(.*)(\\7))|\\{)([^}]*)",
                    "captures": {
                        "1": {
                            "name": "meta.object-literal.key.ts"
                        },
                        "5": {
                            "patterns": [
                                {
                                    "include": "#quoted"
                                }
                            ]
                        },
                        "10": {
                            "patterns": [
                                {
                                    "include": "source.ts"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    }
}
