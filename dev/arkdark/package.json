{
    "name": "arkdark",
    "displayName": "ArkDark",
    "description": "ArkType syntax highlighting and themeâ›µ",
    "version": "2.1.4",
    "private": true,
    "publisher": "arktypeio",
    "type": "module",
    "scripts": {
        "build": "ts-node ./src/writeTheme.ts",
        "vspublish": "pnpm build && npx vsce publish"
    },
    "devDependencies": {
        "@types/node": "18.15.13",
        "ts-node": "10.9.1",
        "typescript": "5.1.0-beta"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arktype"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "icon": "icon.png",
    "categories": [
        "Themes",
        "Programming Languages"
    ],
    "contributes": {
        "themes": [
            {
                "label": "ArkDark",
                "uiTheme": "vs-dark",
                "path": "./themes/arkDark.json"
            }
        ],
        "grammars": [
            {
                "injectTo": [
                    "source.ts",
                    "source.ts.tsx",
                    "source.js",
                    "source.js.jsx"
                ],
                "scopeName": "source.arktype.injection.ts",
                "path": "arktype.tmLanguage.json"
            }
        ]
    }
}
